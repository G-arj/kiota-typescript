{
    "name": "root",
    "private": true,
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "workspaces": [
        "packages/abstractions",
        "packages/serialization/*",
        "packages/http/*",
        "packages/testSample"
    ],
    "scripts": {
        "compile": "yarn run compileFull:cjs && yarn run compileFull:es",
        "compileFull:cjs": "tsc -b packages/testSample/tsconfig.cjs.json",
        "compileFull:es": "tsc -b packages/testSample/tsconfig.es.json",
        "test": "node ./packages/testSample/dist/cjs/main/main.js"
    }
}